<?xml version="1.0" encoding="utf-8" ?>
<popup:Popup
    x:Class="MAUI_Tutorial1_TodoList.Views.LocationPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:popup="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">
    <Frame Padding="20" BackgroundColor="White" CornerRadius="8">
        <StackLayout Spacing="15">
            <Label Text="Enter your ZIP code:" FontAttributes="Bold" FontSize="18" HorizontalOptions="Center" />
            <Entry x:Name="ZipEntry" Placeholder="ZIP Code" Keyboard="Numeric" />
            <Button Text="OK" BackgroundColor="#800080" TextColor="White" Clicked="OnOkClicked" />
        </StackLayout>
    </Frame>
</popup:Popup>
