<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI_Tutorial1_TodoList.Views.EventDetailPage"
             Title="Event Details">
    <ScrollView>
        <StackLayout Padding="10" Spacing="10">
            <Image Source="{Binding ImageUrl}" 
             HeightRequest="200" 
             Aspect="AspectFill" />
            <Label Text="{Binding Title}" 
             FontSize="Large" 
             FontAttributes="Bold" />
            <Label Text="{Binding When}" 
             FontSize="Medium" 
             TextColor="Gray" />
            <Label Text="{Binding Address}" 
             FontSize="Medium" 
             TextColor="Gray" />
            <Label Text="{Binding Description}" 
             FontSize="Small" />
            <Button Text="More Info" Clicked="OnMoreInfoClicked" />
        </StackLayout>
    </ScrollView>
</ContentPage>
